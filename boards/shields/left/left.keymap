#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>


/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer { // Layer 0
            bindings = <
                &kp ESCAPE    &kp 1    &kp 2    &kp 3    &kp 4    &kp TAB    &kp K_VOLUME_DOWN    &kp K_VOLUME_UP    &bt BT_SEL 0  // push button, reset switch
                &kp GRAVE    &kp Q    &kp W    &kp E    &kp R    &kp T    &kp Y    &kp U    &bt BT_CLR    &none // push button, push button
                &kp LSHIFT    &kp A    &kp S    &kp D    &kp F    &kp G    &kp H    &kp J    &none    &none // encoder button
                &kp LSHIFT    &kp Z    &kp X    &kp C    &kp V    &kp B    &kp N    &kp M    &none    &none
                &kpl CTRL    &kp LEFT_WIN    &kp LALT    &kp SPACE    &kp SPACE    &kp SPACE    &none    &none    &none    &none
            >;
        };
    };
 };
